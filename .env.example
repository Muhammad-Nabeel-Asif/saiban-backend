# Node Environment
NODE_ENV=production

# Server Ports
PORT=3000

# MongoDB Connection Strings
# Production Database
MONGODB_URI=mongodb://localhost:27017/saiban
MONGODB_URI_PROD=mongodb://localhost:27017/saiban-prod

# Staging Database (for testing/development)
MONGODB_URI_STAGING=mongodb://localhost:27017/saiban-staging

# OR use MongoDB Atlas (Cloud Database)
# MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/saiban-prod?retryWrites=true&w=majority
# MONGODB_URI_STAGING=mongodb+srv://username:password@cluster.mongodb.net/saiban-staging?retryWrites=true&w=majority

# JWT Secret (change this to a random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000